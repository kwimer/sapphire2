<div class="col-md-4">
  <div class="card card-media">
    <div class="card-img-top" style="height: 200px;background-image: url('<%= media.tmdb_image_path(:backdrop) %>');">

    </div>
    <div class="card-body">
      <div class="card-title"><%= link_to media.title, media %></div>
      <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to_favorite(media) %></button>
          <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>
<section id="cast" class="cards bg-grey">
  <div class="container clearfix">
    <h4>Cast</h4>
    <div class="row slider">
      <% media.cast_credits.each do |credit| %>

        <div class="card">
          <%= tmdb_image_tag credit.person, 'profile', class: "card-img-top" %>
          <div class="card-body">
            <div class="card-title text-truncate"><%= link_to credit.person.name, credit.person %></div>
            <div class="card-subtitle text-truncate"><%= credit.character %></div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</section>

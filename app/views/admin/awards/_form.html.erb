<%= simple_form_for resource, url: form_resource_path do |f| %>
  <div class="card card-small mb-3">
    <div class="card-body">
      <%= f.input :year %>
      <%= f.input :tmdb_import_id, label: 'Movie', collection: [f.object.movie].compact.map { |m| [m.name, m.tmdb_import_id, data: {data: m.as_tmdb_option.to_json}] }, input_html: {data: {url: api_search_path(type: 'movie')}} %>
      <%= f.input :award_type, collection: %w(nominee winner) %>
      <%= f.input :award_name %>
    </div>
    <div class="card-footer border-top">
      <%= f.submit class: "btn btn-sm btn-accent ml-auto d-table" %>
    </div>
  </div>
<% end %>
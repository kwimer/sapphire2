<%= simple_form_for resource, url: form_resource_path do |f| %>
  <div class="card card-small mb-3">
    <div class="card-body">
      <%= f.input :name %>
      <%= f.input :description %>
    </div>
    <div class="card-footer border-top">
      <%= f.submit class: "btn btn-sm btn-accent ml-auto d-table" %>
    </div>
  </div>
<% end %>
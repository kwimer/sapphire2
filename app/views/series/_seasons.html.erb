<section id="seasons" class="cards">
  <div class="container">
    <h4>Seasons</h4>
    <div class="row">
      <% media.seasons.order(number: :desc).each do |season| %>
        <div class="card text-center">
          <%= tmdb_image_tag season, 'poster', class: "card-img-top" %>
          <div class="card-body">
            <div class="card-title text-truncate"><%= link_to season.name %></div>
            <div class="card-subtitle text-truncate"><%= pluralize(season.episodes_count, 'episode') %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>